<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:gravity="center"
  android:background="#ff730f"
  tools:context=".MatakuliahActivity">

  <TextView
    android:id="@+id/matkul"
    android:layout_width="233dp"
    android:layout_height="40dp"
    android:text="Matakuliah"
    android:textSize="30dp" />

  <ImageView
    android:id="@+id/imageView"
    android:layout_width="349dp"
    android:layout_height="100dp"
    android:src="@drawable/regis1" />

  <LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rounded_background">

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/edtKodemk"
      android:hint="Kode Matakuliah"
      android:inputType="textAutoComplete"
      android:drawableRight="@drawable/ic_password1"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/edtNamamk"
      android:hint="Nama Matakuliah"
      android:inputType="textAutoComplete"
      android:drawableRight="@drawable/ic_password1"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/edtJam"
      android:hint="Jam Kuliah"
      android:inputType="textAutoComplete"
      android:drawableRight="@drawable/ic_password1"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/edtHari"
      android:hint="Hari Kuliah"
      android:inputType="textAutoComplete"
      android:drawableRight="@drawable/ic_password1"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/edtRuangan"
      android:hint="Ruangan"
      android:inputType="textAutoComplete"
      android:drawableRight="@drawable/ic_password1"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/edtNidn"
      android:hint="Nomor Induk Dosen"
      android:inputType="textAutoComplete"
      android:drawableRight="@drawable/ic_password1"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/edtNama"
      android:hint="Nama Dosen"
      android:inputType="textAutoComplete"
      android:drawableRight="@drawable/ic_password1"/>


    <Button
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="6dp"
      android:layout_marginLeft="5dp"
      android:text="Tambah"
      android:id="@+id/btnTambah"
      android:background="@drawable/rounded_background"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_marginTop="5dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lihat Data ? " />

      <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/btnMenu"
        android:text="Disini!"/>

  </LinearLayout>
</LinearLayout>
</LinearLayout>
